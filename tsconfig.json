{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "ng-lib",
    "noImplicitAny": false,
    "module": "amd",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2016",
      "dom"
  ]
}
